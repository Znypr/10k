RewriteEngine On
RewriteBase /

# 1. SERVE REAL FILES (CSS, JS, Images)
# If the file exists, serve it and stop.
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

# 2. HANDLE LEGAL PAGES (Impressum/Datenschutz)
# If url is znypr.com/contact/impressum, load contact/impressum.html
RewriteRule ^contact/(.*)$ contact/$1.html [L]

# 3. FORCE THE "CONTACT" TAB TO LOAD THE APP
# Without this, the server might try to open the 'contact' folder index.
RewriteRule ^contact/?$ index.html [L]

# 4. CATCH-ALL FOR SPA (Home, Gear, etc.)
# Everything else loads index.html, which runs script.js
RewriteRule ^ index.html [L]