RewriteEngine On
RewriteBase /

# 1. FIXED: ROUTE LEGAL FILES FROM NESTED TABS FOLDER
# This rule tells the server: "If it's a deep path, look in /tabs/"
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_URI} !=/contact
RewriteCond %{DOCUMENT_ROOT}/tabs/%{REQUEST_URI}.html -f
RewriteRule ^(.*)$ tabs/$1.html [L]

# 2. SERVE EXISTING ASSETS
RewriteCond %{REQUEST_FILENAME} -f
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# 3. ROUTE VIRTUAL TABS (SPA logic)
RewriteRule ^ index.html [L]