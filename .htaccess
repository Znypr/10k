RewriteEngine On
RewriteBase /

# 1. SPECIFIC MAPPING FOR LEGAL PAGES
# This forces the clean URL to find the deep-nested file
RewriteRule ^contact/impressum$ tabs/contact/impressum.html [L]
RewriteRule ^contact/datenschutz$ tabs/contact/datenschutz.html [L]

# 2. SERVE EXISTING ASSETS (CSS, JS, Images)
# If the file actually exists (like /style.css), serve it directly
RewriteCond %{REQUEST_FILENAME} -f
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# 3. ROUTE VIRTUAL TABS (SPA logic)
# Everything else (like /gear or /contact) goes to index.html
RewriteRule ^ index.html [L]