RewriteEngine On
RewriteBase /

# 1. FIXED: ROUTE LEGAL FILES FROM NESTED TABS FOLDER
# Note the / after tabs/ - this allows the server to enter the folder
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{DOCUMENT_ROOT}/tabs/%{REQUEST_URI}.html -f
RewriteRule ^(.*)$ tabs/$1.html [L]
RewriteRule ^contact/impressum$ tabs/contact/impressum.html [L]
RewriteRule ^contact/datenschutz$ tabs/contact/datenschutz.html [L]

# 2. SERVE EXISTING ASSETS (CSS/JS/Images)
RewriteCond %{REQUEST_FILENAME} -f
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# 3. ROUTE VIRTUAL TABS (gear, socials, etc.)
RewriteRule ^ index.html [L]